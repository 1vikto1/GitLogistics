<Page x:Class="Logistics.Pages.AuthorizationPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Logistics.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="415" d:DesignWidth="718"
      Title="AuthorizationPage">

    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Логин:"/>

                <TextBox Width="300" Background="Orange"/>
            </StackPanel>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <TextBlock Text="Пароль:"/>

                <PasswordBox Width="300" Background="Orange"/>
            </StackPanel>

            <Button Content="Войти" Height="30" Width="100" Background="Orange"/>
        
        </StackPanel>
    </Grid>
</Page>
